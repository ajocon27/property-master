
@{
    ViewData["Title"] = "Property List";    
    var photos = (List<Photo>)ViewBag.photos;
    var property =ViewBag.list;
    var i=0;
}
<style>
    hr {
  margin-top: 0.20rem;
  margin-bottom: 1rem;
  border: 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

</style>
<div class="container mt-md-5">
            
            <h2 class="mt-md-2 text-center font-weight-normal">@ViewData["property_name"] </h2>
            
            
            
    <div class="row">
        <div class="col-md-8 mx-auto my-3 p-3 bg-white rounded shadow-sm ">
            <div class="row">
                <div class="col">
                    <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner" style="height: 400px;">
                            @foreach (var p in photos)
                            {
                                
                            @if(i==0)
                                {
                                    <div class="carousel-item active">
                                    <img src="@p.photo_url" class="d-block w-100" alt="..." style="width: 200px;height: 400px;object-fit: cover;">
                                    </div>
                                    i++;
                                }
                                else
                                {

                                    <div class="carousel-item">
                                    <img src="@p.photo_url" class="d-block w-100" alt="..." style="width: 200px;height: 400px;object-fit: cover;">
                                    </div>
                                }
                        
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            
            <h5 class="mt-md-2 text-primary">$ @ViewData["price"]</h5>
            <p>@ViewData["address"]</p>
            <p>@ViewData["city"], @ViewData["province"]  @ViewData["postalcode"]</p>
           
            <h5 class="mt-md-4 ">Description</h5>
            <hr/>
            <p class="text-justify text-muted "> @ViewData["description"]</p>
              
            <h5 class="mt-md-4 ">Property Summary</h5>
            <hr/>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <p class=" text-muted"> Bedrooms: <strong>@ViewData["bedroom"]</strong></p>   
                    </div> 
                    <div class="col">
                        <p class=" text-muted"> Size (sqft): <strong>@ViewData["size"]</strong></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p class=" text-muted"> Bathrooms: <strong>@ViewData["bath"]</strong></p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-4 mx-auto my-3 p-3 bg-white rounded shadow-sm ">
            <div class="row">
                <div class="col">
                    <h5>Contact</h5>
                    <p class=" text-muted"> @ViewData["firstname"] @ViewData["lastname"] </p>
                    <a class=" text-primary" href="mailto:@ViewData["email"]">Send Email to @ViewData["email"] </a>
                </div>
            </div>
        </div>


    </div>
</div>
</div>
<script>
    $('.carousel').carousel();
</script>
