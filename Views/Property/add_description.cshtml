@{
    ViewData["Title"] = "Post Ad";    
    var title= @ViewData["ad_name"];


}


<form action="/property/add_description" method="post">
          <div class="row">
            <div class="col-md-10 mx-auto">
                <div class="card text-center" style="margin-top:1%;">
                <div class="card-header">
                <h5 class="card-title">@title</h5>
                </div>
                <div class="card-body">
                     <h5 class="card-title">Add Details</h5>
                    <p class="card-text">
                        
                            <div class="row">

                            <div class="input-group-lg col-5 mx-auto mt-md-3">
                            
                                <select class="custom-select" name="bedrooms" id="inputGroupSelect01">
                                <option value="0" selected>How Many Bedrooms</option>
                                 <option value="Bachelor/Studio" >Bachelor/Studio</option>
                                <option value="1" >1</option>
                                 <option value=">1 + Den" >1 + Den</option>
                                <option value="2" >2</option>
                                <option value="2 + Den" >2 + Den</option>
                                <option value="3" >3</option>  
                                <option value="4" >4</option>
                                <option value="5" >5</option>
                                <option value="6+" >6+</option>
                                </select>
                                </div>
                             </div>
                         <div class="row">

                            <div class="input-group-lg col-5 mx-auto mt-md-3">
                            
                                <select class="custom-select" name="bathrooms" id="inputGroupSelect02">
                                <option value="0" selected>How Many Bathrooms</option>
                                <option value="1" >1</option>
                                <option value="2" >2</option>
                                <option value="3" >3</option>  
                                <option value="4" >4</option>
                                <option value="5" >5</option>
                                <option value="6+" >6+</option>
                                </select>
                                </div>
                             </div>
                        <div class="row">
                            <div class="input-group input-group-lg col-5 mx-auto mt-md-3 ">
                                <input type="text" placeholder="Size (SQFT)" name="property_size" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                            
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group input-group-lg col-5 mx-auto mt-md-3 ">
                                <input readonly type="text" placeholder="" name="category" value='@ViewData["category"]' class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                            
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group input-group-lg col-5 mx-auto mt-md-3 ">
                                <input type="text" placeholder="Ad Title" name="property_name" class="form-control" value="@title" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                            
                            </div>
                        </div> 
                        <div class="row">
                            <div class="input-group input-group-lg col-5 mx-auto mt-md-3 ">
                                <input type="text" placeholder="Price" name="price" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                            
                            </div>
                        </div>           
                        <div class="row">
                            <div class=" input-group-lg col-5 mx-auto mt-md-3 ">

                                <textarea class="form-control" placeholder="Description" name="description" aria-label="With textarea"></textarea>
                            </div>     
                        </div>  
                            <div class="row">
                            <div class=" input-group-lg col-5 mx-auto mt-md-3 ">

                        <div class="form-group input-group-lg">
                            <label for="inputAddress"></label>
                            <input type="text" class="form-control" name="address" id="inputAddress" placeholder="Address">
                        </div>
                        <div class="form-group input-group-lg">
                            <label for="inputAddress2"></label>
                            <input type="text" class="form-control" name="address2" id="inputAddress2" placeholder="Address 2">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 input-group-lg">
                            <!-- <label for="inputCity">City</label> -->
                            <input type="text" class="form-control" name="city" id="inputCity" placeholder="City">
                            </div>
                            <div class="form-group col-md-4 input-group-lg">
                            <!-- <label for="inputState">Province</label> -->
                            <select id="inputState" name="province" class="form-control">
                                <option selected>Choose Province</option>
                                <option value="Manitoba">Manitoba</option>
                            </select>
                            </div>
                            <div class="form-group col-md-2 input-group-lg">
                            <!-- <label for="inputZip">Postal Code</label> -->
                            <input type="text" class="form-control" name="postalcode" id="inputZip" placeholder="Postal">
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12">    
                                <div class="input-group input-group-lg col-5 mx-auto mt-md-3">
                                    <button type="Submit" id="submit-button" class="btn btn-primary btn-lg btn-block">Next Step</button>
                                </div>
                        </div>
                     </div>  
                    </p>            
                </div>
                </div>         
            </div>
          </div>
        



</div>
</form>



<script>
$(document).ready(function() {
  
    $("#input-fas-25").fileinput({
        theme:"fas",
        uploadUrl: "/FileUpload/uploadfile",
        maxFileCount: 5,
        initialPreviewAsData: true,
        uploadAsync: false,
        deleteUrl: "/site/file-delete",
        overwriteInitial: true,
        maxFileSize: 500
  
}).on('filebatchuploadsuccess', function(event, data) {
       var form = data.form, files = data.files, extra = data.extra,
        response = data.response, reader = data.reader;

});

});




</script>
